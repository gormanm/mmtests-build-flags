CFLAGS_EXTRA="$DEFAULT_OPTIMISATION_LEVEL -ffp-contract=fast -funroll-loops"
CXXFLAGS_EXTRA="$CFLAGS_EXTRA"
FCFLAGS_EXTRA="$CFLAGS_EXTRA -ffree-line-length-none"
LDFLAGS="-fopenmp"

case $MMTESTS_TOOLCHAIN in
gcc-10)
	FCFLAGS_EXTRA+=" -w -fallow-argument-mismatch"
	;;
esac

  CFLAGS_EXTRA+=" $MARCH_FLAG_DEFAULT $MTUNE_FLAG_DEFAULT $COMPILE_OPT_ALWAYS"
CXXFLAGS_EXTRA+=" $MARCH_FLAG_DEFAULT $MTUNE_FLAG_DEFAULT $COMPILE_OPT_ALWAYS"
 FCFLAGS_EXTRA+=" $MARCH_FLAG_DEFAULT $MTUNE_FLAG_DEFAULT $COMPILE_OPT_ALWAYS"

export CFLAGS_EXTRA
export CXXFLAGS_EXTRA
export FCFLAGS_EXTRA
export LDFLAGS

log_opt "CFLAGS_EXTRA:     $CFLAGS_EXTRA"
log_opt "CXXFLAGS_EXTRA:   $CXXFLAGS_EXTRA"
log_opt "FCFLAGS_EXTRA:    $FCFLAGS_EXTRA"
log_opt "LDFLAGS:          $LDFLAGS"

load_standard_environment
load_mpi_environment
