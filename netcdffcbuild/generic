CFLAGS="$DEFAULT_OPTIMISATION_LEVEL"
CPPFLAGS="$DEFAULT_OPTIMISATION_LEVEL"
FCFLAGS="$DEFAULT_OPTIMISATION_LEVEL"

case $MMTESTS_TOOLCHAIN in
gcc-10)
	FCFLAGS+=" -w -fallow-argument-mismatch"
	;;
esac

CFLAGS+="            $MARCH_FLAG_DEFAULT $MTUNE_FLAG_DEFAULT $COMPILE_OPT_ALWAYS"
CPPFLAGS+="          $MARCH_FLAG_DEFAULT $MTUNE_FLAG_DEFAULT $COMPILE_OPT_ALWAYS"
FCFLAGS+="  $FCFLAGS $MARCH_FLAG_DEFAULT $MTUNE_FLAG_DEFAULT $COMPILE_OPT_ALWAYS"

export CFLAGS
export CPPFLAGS
export FCFLAGS

load_standard_environment
load_mpi_environment
